<div id="contact">
    <div class="container">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <h2 class="centered">管理者情報編集</h2>
          <%= form_tag('/users/update') do %>
            <div class="form-group">
              <h4>Name</h4>
              <input name="name" class="form-control" id="contact-name">
              <div class="validate"></div>
            </div>
            <div class="form-group">
              <h4>Password</h4>
              <input type="password" name="password" class="form-control" id="contact-subject">
              <div class="validate"></div>
            </div>
            <div class="loading"></div>
            <div class="error-message"></div>

            <div class="form-send">
                <input id="submit" type="submit" value="login">
            </div>

          <% end %>

        </div>
      </div>
    </div>
  </div>